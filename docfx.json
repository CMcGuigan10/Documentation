{
    "build": {
        "content": [
            {
                "files": [
                    "help/**.md",
                    "help/**/toc.yml",
                    "toc.yml",
                    "*.md"
                ],
                "exclude": ["obj/**", "_site/**"]
            }
        ],
        "resource": [
            {
                "files": [
                    "images/**",
                    "**/images/**"
                ],
                "exclude": ["obj/**", "_site/**"]
            }
        ],
        "dest": "_site",
        "globalMetadataFiles": [],
        "fileMetadataFiles": [],
        "template": ["templates/infragistics"],
        "noLangKeyword": false,
        "keepFileLink": false,
        "cleanupCacheHistory": false,
        "disableGitFeatures": true,
        "globalMetadata": {
            "_appTitle": "Reveal",
            "_appFooter": "Copyright 2020 Infragistics",
            "_gitContribute": {
              "repo": "https://github.com/RevealBi/Documentation",
              "branch": "master"
            }
        }
    }
}
